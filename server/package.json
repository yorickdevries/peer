{
  "name": "peer_review_server",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/bin/www.js",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "jest ./tests",
    "coverage": "jest --collectCoverage ./tests",
    "test_old": "mocha --opts ./test_old/mocha.opts",
    "coverage_old": "nyc npm run test_old",
    "data_init_old": "node ./dist/old_api/scripts/data_init.js"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 50,
    "all": true,
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/bin/www.ts",
      "src/scripts/*.ts"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/bluebird": "^3.5.32",
    "@types/compression": "^1.7.0",
    "@types/config": "0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^17.1.2",
    "@types/helmet": "0.0.47",
    "@types/lodash": "^4.14.156",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.13",
    "@types/session-file-store": "^1.2.1",
    "bluebird": "^3.7.2",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "cookie-parser": "^1.4.5",
    "export-from-json": "^1.3.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.1",
    "file-system-cache": "^1.0.5",
    "forwarded-for": "^1.1.0",
    "fs-extra": "^6.0.1",
    "hasha": "^5.2.0",
    "helmet": "^3.22.0",
    "json2csv": "^4.5.4",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "neat-csv": "^5.2.0",
    "passport": "^0.4.1",
    "passport-mock-strategy": "^2.0.0",
    "passport-saml": "^0.35.0",
    "passport-saml-metadata": "^1.6.0",
    "pg-promise": "^10.5.6",
    "reflect-metadata": "^0.1.13",
    "session-file-store": "^1.4.0",
    "strip-bom-buf": "^2.0.0",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^7.1.2",
    "@types/jest": "^26.0.0",
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "mocha": "^5.2.0",
    "mockdate": "^3.0.2",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "sqlite3": "^4.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^6.2.0"
  }
}
